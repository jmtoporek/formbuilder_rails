<%- model_class = Configurator -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @configurator.name %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:slug) %>:</strong></dt>
  <dd><%= @configurator.slug %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:key) %>:</strong></dt>
  <dd><%= @configurator.key %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:datastore) %>:</strong></dt>
  <dd><%= @configurator.datastore %></dd>
</dl>

<% if @configurator.formelements.length > 0 %>
<hr />

<h2>Form elements</h2>
<table class='table table-bordered'>
  <thead>
    <tr>
      <th>Form Element Name</th>
      <th>Type</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    <% @configurator.formelements.each do |formelement|%>
    <tr>
      <td><%= link_to formelement.name, configurator_formelement_path(@configurator, formelement), :class => 'btn' %></td>
      <td><%= formelement.tag_type %></td>
      <td>...</td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h4>no form elements</h4>
<% end %>

<%= link_to "Add new formelement", new_configurator_formelement_path(@configurator.id), :class => 'btn btn-default' %>
<br />
<%= link_to t('.back', :default => t("helpers.links.back")),
              configurators_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_configurator_path(@configurator), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              configurator_path(@configurator),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
